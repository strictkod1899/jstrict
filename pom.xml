    <artifactId>jstrict</artifactId>
    <version>0.1.0</version>
    <packaging>pom</packaging>
    <name>jstrict</name>
    <url>http://maven.apache.org</url>

    <modules>
        <module>jutils</module>
        <module>jswing</module>
        <module>jdb</module>
        <module>jfile</module>
        <module>jpatterns</module>
        <module>jneuralnetwork</module>
    </modules>

    <!-- Перенести блок dependencyManagement в корневой модуль проекта-->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jutils</artifactId>
                <version>0.1.2</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jfile</artifactId>
                <version>0.1.0</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jpatterns</artifactId>
                <version>0.1.0</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jswing</artifactId>
                <version>0.1.0</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jneuralnetwork</artifactId>
                <version>0.1.0</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jdb-core</artifactId>
                <version>0.1.3</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jdb-jdbc</artifactId>
                <version>0.1.0</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jdb-spring</artifactId>
                <version>0.1.0</version>
            </dependency>
            <dependency>
                <groupId>ru.strict</groupId>
                <artifactId>jdb-hibernate</artifactId>
                <version>0.1.0</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- Перенести блок properties в корневой модуль проекта-->
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <jdk.version>1.8</jdk.version>
        <plugin.compiler.version>2.5.1</plugin.compiler.version>
        <plugin.jar.version>2.4</plugin.jar.version>
        <plugin.dependency.version>2.5.1</plugin.dependency.version>
        <plugin.surefire.version>2.12.4</plugin.surefire.version>
        <plugin.war.version>3.2.0</plugin.war.version>
    </properties>
</project>
