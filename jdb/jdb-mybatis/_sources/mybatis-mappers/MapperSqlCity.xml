<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.strict.db.mybatis.mappers.sql.MapperSqlCity">

    <resultMap id="city" type="ru.strict.db.core.entities.EntityCity">
        <id property="id" column="id"/>
        <result property="caption" column="caption"/>
        <result property="countryId" column="country_id"/>
    </resultMap>

    <resultMap id="cityFill" type="ru.strict.db.core.entities.EntityCity" extends="city">
        <association property="country"
                     column="country_id"
                     javaType="ru.strict.db.core.entities.EntityCountry"
                     select="ru.strict.db.mybatis.mappers.sql.MapperSqlCountry.read"
                     fetchType="lazy"
        />
    </resultMap>

    <insert id="create" parameterType="ru.strict.db.core.entities.EntityCity">
        INSERT INTO city (id, caption, country_id) VALUES (#{id}, #{caption}, #{countryId})
    </insert>

    <select id="read" parameterType="java.lang.Object" resultMap="city">
        SELECT * FROM city WHERE id = #{id}
    </select>

    <select id="readAll" parameterType="String" resultMap="city">
        SELECT * FROM city ${value}
    </select>

    <update id="update" parameterType="ru.strict.db.core.entities.EntityCity">
        UPDATE city SET caption = #{caption}, country_id = #{countryId} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Object">
        DELETE FROM city WHERE id = #{id}
    </delete>

    <select id="readFill" parameterType="java.lang.Object" resultMap="cityFill" >
        SELECT * FROM city WHERE id = #{id}
    </select>

    <select id="readAllFill" parameterType="String" resultMap="cityFill">
        SELECT * FROM city ${value}
    </select>

    <select id="readCount" parameterType="String" resultType="int">
        SELECT COUNT(*) FROM city ${value}
    </select>

    <select id="readByCountryId" parameterType="java.lang.Object" resultMap="city">
        SELECT * FROM city WHERE country_id = #{countryId}
    </select>
</mapper>