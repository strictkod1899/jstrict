<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.strict.db.mybatis.mappers.sql.MapperSqlCountry">

    <resultMap id="country" type="ru.strict.db.core.entities.EntityCountry">
        <id property="id" column="id"/>
        <result property="caption" column="caption"/>
    </resultMap>

    <resultMap id="countryFill" type="ru.strict.db.core.entities.EntityCountry" extends="country">
        <collection property="cities"
                    column="id"
                    javaType="List"
                    ofType="ru.strict.db.core.entities.EntityCity"
                    select="ru.strict.db.mybatis.mappers.sql.MapperSqlCity.readByCountryId"
                    fetchType="lazy"
        />
    </resultMap>

    <insert id="create" parameterType="ru.strict.db.core.entities.EntityCountry">
        INSERT INTO country (id, caption) VALUES (#{id}, #{caption})
    </insert>

    <insert id="createGenerateId" parameterType="ru.strict.db.core.entities.EntityCountry"
            useGeneratedKeys="true"
            keyColumn="id"
            keyProperty="id">
        INSERT INTO country (caption) VALUES (#{caption})
    </insert>

    <select id="read" parameterType="java.lang.Object" resultMap="country">
        SELECT * FROM country WHERE id = #{id}
    </select>

    <select id="readAll" resultMap="country">
        SELECT * FROM country
    </select>

    <update id="update" parameterType="ru.strict.db.core.entities.EntityCountry">
        UPDATE country SET caption = #{caption} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Object">
        DELETE FROM country WHERE id = #{id}
    </delete>

    <select id="readFill" parameterType="java.lang.Object" resultMap="countryFill" >
        SELECT * FROM country WHERE id = #{id}
    </select>

    <select id="readAllFill" resultMap="countryFill">
        SELECT * FROM country
    </select>

    <select id="readCount" resultType="int">
        SELECT COUNT(1) FROM country
    </select>

    <select id="readCountById" parameterType="java.lang.Object" resultType="int">
        SELECT COUNT(1) FROM country WHERE id = #{id}
    </select>

    <select id="readByName" parameterType="java.lang.String" resultMap="country">
        SELECT * FROM country WHERE caption = #{caption}
    </select>

    <select id="readAllByName" parameterType="java.lang.String" resultMap="country">
        SELECT * FROM country WHERE caption = #{caption}
    </select>
</mapper>