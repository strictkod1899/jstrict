<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.strict.db.mybatis.mappers.sql.MapperSqlRoleuser">

    <resultMap id="roleuser" type="ru.strict.db.core.entities.EntityRoleuser">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="description" column="description"/>
    </resultMap>

    <resultMap id="roleuserFill" type="ru.strict.db.core.entities.EntityRoleuser" extends="roleuser">
        <collection property="users"
                    column="id"
                    javaType="List"
                    ofType="ru.strict.db.core.entities.EntityUser"
                    select="ru.strict.db.mybatis.mappers.sql.MapperSqlUser.readByRoleId"
                    fetchType="lazy"/>
    </resultMap>

    <insert id="create" parameterType="ru.strict.db.core.entities.EntityRoleuser">
        INSERT INTO roleuser (id, code, description) VALUES (#{id}, #{code}, #{description})
    </insert>

    <insert id="createGenerateId" parameterType="ru.strict.db.core.entities.EntityRoleuser"
            useGeneratedKeys="true"
            keyColumn="id"
            keyProperty="id">
        INSERT INTO roleuser (code, description) VALUES (#{code}, #{description})
    </insert>

    <select id="read" parameterType="java.lang.Object" resultMap="roleuser">
        SELECT * FROM roleuser WHERE id = #{id}
    </select>

    <select id="readAll" resultMap="roleuser">
        SELECT * FROM roleuser
    </select>

    <update id="update" parameterType="ru.strict.db.core.entities.EntityRoleuser">
        UPDATE roleuser SET code = #{code}, description = #{description} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Object">
        DELETE FROM roleuser WHERE id = #{id}
    </delete>

    <select id="readFill" parameterType="java.lang.Object" resultMap="roleuserFill" >
        SELECT * FROM roleuser WHERE id = #{id}
    </select>

    <select id="readAllFill" resultMap="roleuserFill">
        SELECT * FROM roleuser
    </select>

    <select id="readCount" resultType="int">
        SELECT COUNT(1) FROM roleuser
    </select>

    <select id="readCountById" parameterType="java.lang.Object" resultType="int">
        SELECT COUNT(1) FROM roleuser WHERE id = #{id}
    </select>

    <select id="readByUserId" parameterType="java.lang.Object" resultMap="roleuser">
        SELECT * FROM roleuser WHERE id IN (SELECT roleuser_id FROM user_on_role WHERE userx_id = #{userId})
    </select>

    <select id="readByName" parameterType="java.lang.String" resultMap="roleuser">
        SELECT * FROM roleuser WHERE code = #{caption}
    </select>

    <select id="readAllByName" parameterType="java.lang.String" resultMap="roleuser">
        SELECT * FROM roleuser WHERE code = #{caption}
    </select>
</mapper>