<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.strict.db.mybatis.mappers.sql.MapperSqlServiceOnRole">

    <resultMap id="serviceOnRole" type="ru.strict.db.core.entities.EntityServiceOnRole">
        <id property="id" column="id"/>
        <result property="serviceId" column="service_id"/>
        <result property="roleId" column="roleuser_id"/>
    </resultMap>

    <resultMap id="serviceOnRoleFill" type="ru.strict.db.core.entities.EntityServiceOnRole" extends="serviceOnRole">
        <association property="role"
                     column="roleuser_id"
                     javaType="ru.strict.db.core.entities.EntityRoleuser"
                     select="ru.strict.db.mybatis.mappers.sql.MapperSqlRoleuser.read"
                     fetchType="lazy"/>
    </resultMap>

    <insert id="create" parameterType="ru.strict.db.core.entities.EntityServiceOnRole">
        INSERT INTO service_on_role (id, service_id, roleuser_id) VALUES (#{id}, #{serviceId}, #{roleId})
    </insert>

    <insert id="createGenerateId" parameterType="ru.strict.db.core.entities.EntityServiceOnRole"
            useGeneratedKeys="true"
            keyColumn="id"
            keyProperty="id">
        INSERT INTO service_on_role (service_id, roleuser_id) VALUES (#{serviceId}, #{roleId})
    </insert>

    <select id="read" parameterType="java.lang.Object" resultMap="serviceOnRole">
        SELECT * FROM service_on_role WHERE id = #{id}
    </select>

    <select id="readAll" parameterType="String" resultMap="serviceOnRole">
        SELECT * FROM service_on_role ${value}
    </select>

    <update id="update" parameterType="ru.strict.db.core.entities.EntityServiceOnRole">
        UPDATE service_on_role SET service_id = #{serviceId}, roleuser_id = #{roleId} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Object">
        DELETE FROM service_on_role WHERE id = #{id}
    </delete>

    <select id="readFill" parameterType="java.lang.Object" resultMap="serviceOnRoleFill" >
        SELECT * FROM service_on_role WHERE id = #{id}
    </select>

    <select id="readAllFill" parameterType="String" resultMap="serviceOnRoleFill">
        SELECT * FROM service_on_role ${value}
    </select>

    <select id="readCount" parameterType="String" resultType="int">
        SELECT COUNT(*) FROM service_on_role ${value}
    </select>
</mapper>